<!DOCTYPE html>
<html>
    <head>
        <title>Lista de Tareas</title>

        <script src="jquery-2.1.4.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <!-- Latest compiled and minified JavaScript -->
        <script src="css/bootstrap-theme.css"></script>
    
    </head>

    <body class="container">
       <div  class="jumbotron">
        <h1>Lista de Tareas</h1>
        <ul>
            <% tareas.forEach(function(tarea, id){%>
            <li><%= tarea %> <a class="badge" href="/borrar/<%=id%>">X</a></li>
            <% }); %>
            </ul>
            <form action="adicionar" method="post">
                <p>
                    <label for="nuevaTarea">Nueva Tarea: </label>
                    <input type="text" name="nuevaTarea" autofocus id="nuevaTarea"/>
                    <input class="btn btn-lg btn-success" type="submit" />
                </p>
            </form>
        </div>
    </body>
</html>








